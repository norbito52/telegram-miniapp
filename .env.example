# =============================================================================
# GIFTROOM MARKETPLACE - ENVIRONMENT VARIABLES
# =============================================================================

# -----------------------------------------------------------------------------
# DATABASE CONFIGURATION
# -----------------------------------------------------------------------------
DATABASE_URL=postgresql://username:password@localhost:5432/giftroom_db
DATABASE_URL_TEST=postgresql://username:password@localhost:5432/giftroom_test_db

# -----------------------------------------------------------------------------
# TELEGRAM BOT CONFIGURATION
# -----------------------------------------------------------------------------
BOT_TOKEN=1234567890:ABCDEFGHIJKLMNOPQRSTUVWXYZ123456789
WEBAPP_URL=https://your-app.onrender.com
BOT_WEBHOOK_URL=https://your-app.onrender.com/webhook/bot

# -----------------------------------------------------------------------------
# TON BLOCKCHAIN CONFIGURATION
# -----------------------------------------------------------------------------
TON_NETWORK=testnet
# TON_NETWORK=mainnet
TON_API_KEY=your_ton_api_key_here
TON_RPC_URL=https://testnet.toncenter.com/api/v2/jsonRPC
TON_WALLET_SEED=your_wallet_seed_phrase_here

# -----------------------------------------------------------------------------
# REDIS CONFIGURATION
# -----------------------------------------------------------------------------
REDIS_URL=redis://localhost:6379/0

# -----------------------------------------------------------------------------
# SECURITY CONFIGURATION
# -----------------------------------------------------------------------------
SECRET_KEY=your_super_secret_key_here_min_32_chars
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# -----------------------------------------------------------------------------
# BUSINESS CONFIGURATION
# -----------------------------------------------------------------------------
MARKET_COMMISSION=0.05
REFERRAL_COMMISSION=0.025
TRANSACTION_TIMEOUT_MINUTES=60

# -----------------------------------------------------------------------------
# EXTERNAL SERVICES
# -----------------------------------------------------------------------------
TELEGRAM_API_ID=your_telegram_api_id
TELEGRAM_API_HASH=your_telegram_api_hash

# -----------------------------------------------------------------------------
# LOGGING
# -----------------------------------------------------------------------------
LOG_LEVEL=INFO
LOG_FILE=logs/app.log

# -----------------------------------------------------------------------------
# DEVELOPMENT SETTINGS
# -----------------------------------------------------------------------------
DEBUG=True
TESTING=False
ENVIRONMENT=development

# -----------------------------------------------------------------------------
# CORS SETTINGS
# -----------------------------------------------------------------------------
ALLOWED_ORIGINS=["http://localhost:3000", "https://your-app.onrender.com"]

# -----------------------------------------------------------------------------
# CELERY CONFIGURATION
# -----------------------------------------------------------------------------
CELERY_BROKER_URL=redis://localhost:6379/1
